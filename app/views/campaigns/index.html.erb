<h1>Listing campaigns</h1>

<% @campaigns.each do |campaign| %>
    <div class="thumbnail">
        <% @candidate = User.find( campaign.user_id) %>
        <%= image_tag @candidate.photo %>
        <h2><%= @candidate.first_name %> <%= @candidate.last_name %></h2>
        <%= campaign.state %> <%= campaign.locality_type %> <%= campaign.locality %><br />
        <%= campaign.office %>
        <table>
            <thead>
                <th>Goal:</th>
                <th>Pledged:</th>
                <th>End date</th>
            </thead>
            <tbody>
                <td><%= campaign.goal %></td>
                <td><%= campaign.funded %></td>
                <td><%= campaign.end %></td>
            </tbody>
        </table>
        <button type="button"><%= link_to 'Show More', campaign %></button>
    </div>
<% end %>
